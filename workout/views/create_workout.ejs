<%- include('partials/head.ejs')%>

<body>
    <div class="container-fluid">
        <header>
            <%- include('partials/nav.ejs') %>
        </header>
        <br>
        <br>
        <div class="d-none d-md-block">
            <div class="row justify-content-center">
                <div class="col-6">
                    <form action="create_workout" method="post" id="create_form">
                        <div class="form-group">
                            <label class="font-weight-bold" for="workout_title">Workout Title</label>
                            <input type="text" class="form-control" id="workout_title"
                                name="workout_title" placeholder="Enter workout title">
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" for="workout_descr">Workout Description</label>
                            <textarea name="workout_descr" form="create_form" class="form-control" placeholder="Enter workout description here..."></textarea>
                        </div>
                        <br>
                        <div class="form-group">
                            <label class="font-weight-bold" for="exercise_title">Exercise Title</label>
                            <input type="text" class="form-control" id="exercise_title"
                                name="exercise_title" placeholder="Enter exercise title">
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" for="exercise_descr">Exercise Description</label>
                            <textarea name="exercise_descr" form="create_form" class="form-control" placeholder="Enter exercise description here..."></textarea>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" for="exercise_sets">Exercise Sets</label>
                            <input type="text" class="form-control" id="exercise_sets"
                                name="exercise_sets" placeholder="Enter total sets">
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" for="exercise_reps">Exercise Reps</label>
                            <input type="text" class="form-control" id="exercise_reps"
                                name="exercise_reps" placeholder="Enter reps per set">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="d-md-none">
            <div class="row justify-content-center">
                <div class="col-12">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1"
                                placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
</body>

<%- include('partials/end.ejs')%>